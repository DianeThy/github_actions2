# Générer .yaml file (quand .Rmd créé)
usethis::use_github_action("render-rmarkdown")

# Générer renv.lock file
library(renv)
renv::init()
library(tidyverse)
renv::snapshot()

# Aligner .yaml avec exemple : 
    #https://github.com/bbest/gh-action-test-rmd/blob/main/.github/workflows/render-rmarkdown.yaml

# Ajouter installation curl .yaml après steps:
      - name: Install curl package
        run: |
          sudo apt-get install -y libcurl4-openssl-dev

